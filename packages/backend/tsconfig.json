{
  "compilerOptions": {
    /* Strictness */
    "strict": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,

    /* Base Options */
    "target": "ES2022",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Module System */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "moduleDetection": "force",

    /* Output */
    "outDir": "dist",
    "sourceMap": true,

    /* Environment */
    "lib": ["ES2022"],

    /* Monorepo Path Aliases */
    "baseUrl": ".",
    "paths": {
      "shared/*": ["../shared/src/*"]
    }
  }
}
